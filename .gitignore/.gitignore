using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApplication1
{
    class Program
    {
        static void Main(string[] args)
        {
            int zahl = Convert.ToInt32(Console.ReadLine());
            int erg = 1;
            
            for(var x=0; x<zahl;x++)
            {
                erg=erg+x*erg;
            }
            Console.WriteLine(erg);
        }
    }
}
